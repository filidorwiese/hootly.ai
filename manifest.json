{
  "manifest_version": 3,
  "name": "FireOwl",
  "version": "0.1.0",
  "description": "Interact with Claude AI directly from any webpage",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "FireOwl Settings",
    "default_popup": "settings.html"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "commands": {
    "toggle-dialog": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Toggle FireOwl dialog (fallback - configure in settings)"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "iframe-app.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
