{
  "manifest_version": 3,
  "name": "FireClaude",
  "version": "0.1.0",
  "description": "Interact with Claude AI directly from any webpage",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["storage.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "FireClaude Settings",
    "default_popup": "settings.html"
  },
  "commands": {
    "toggle-dialog": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Toggle FireClaude dialog"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
