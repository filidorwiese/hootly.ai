{
  "manifest_version": 3,
  "name": "Hootly.ai",
  "version": "0.0.0",
  "description": "Your AI Assistant, Right in Your Browser. Chat with Claude, GPT, Gemini, and more directly from any webpage. Bring your own API key and keep full control of your data.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.anthropic.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://openrouter.ai/*"
  ],
  "background": {
    "page": "background.html"
  },
  "action": {
    "default_title": "Toggle Hootly.ai"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "commands": {
    "toggle-dialog": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Toggle Hootly.ai dialog (fallback - configure in settings)"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["selection-tooltip.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png",
        "iframe.html",
        "iframe-app.js",
        "history.html",
        "personas.html",
        "popup.html",
        "chat.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "@hootly.ai",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": [
          "websiteContent"
        ],
        "optional": [
          "technicalAndInteraction"
        ]
      }
    }
  }
}
