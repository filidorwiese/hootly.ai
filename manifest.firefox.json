{
  "manifest_version": 3,
  "name": "Hootly.ai",
  "version": "0.0.0",
  "description": "Interact with Claude AI directly from any webpage",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Toggle Hootly"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "commands": {
    "toggle-dialog": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Toggle Hootly dialog (fallback - configure in settings)"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png",
        "iframe.html",
        "iframe-app.js",
        "history.html",
        "personas.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "@hootly-ai",
      "strict_min_version": "142.0",
      "update_url": "https://hootly.ai/firefox-updates.json",
      "data_collection_permissions": {
        "required": [
          "websiteContent"
        ],
        "optional": [
          "technicalAndInteraction"
        ]
      }
    }
  }
}
