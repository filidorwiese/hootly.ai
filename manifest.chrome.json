{
  "manifest_version": 3,
  "name": "Hootly.ai",
  "version": "0.0.0",
  "description": "Your AI Assistant, Right in Your Browser. Chat with Claude, GPT, Gemini, and more directly from any webpage.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Toggle Hootly.ai"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "commands": {
    "toggle-dialog": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Toggle Hootly.ai dialog (fallback - configure in settings)"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "iframe.html", "iframe-app.js", "history.html", "personas.html", "popup.html", "chat.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
